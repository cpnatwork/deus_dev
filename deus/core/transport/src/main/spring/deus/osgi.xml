<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/osgi  
		http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<!-- services for sending commands, should be used by core package -->
	<osgi:service id="barkerCommandExecutorOsgiService" ref="barkerCommandExecutor" interface="deus.core.soul.common.BarkerCommandExecutor"/>

	<osgi:service id="publisherCommandExecutorOsgiService" ref="publisherCommandExecutor" interface="deus.core.soul.common.PublisherCommandExecutor"/>
	
	<osgi:service id="subscriberCommandExecutorOsgiService" ref="subscriberCommandExecutor" interface="deus.core.soul.common.SubscriberCommandExecutor"/>
	


	<!--  reference for callback, should be provided by core package -->
	<osgi:reference id="publisherCommandReceiver" interface="deus.core.transport.commandreceiver.PublisherCommandReceiver" />
	
	<osgi:reference id="subscriberCommandReceiver" interface="deus.core.transport.commandreceiver.SubscriberCommandReceiver" />


	<!-- service for registration of transport protocols -->
	<osgi:service id="transportProtocolRegistryOsgiService" ref="transportProtocolRegistry" interface="deus.core.transport.protocolregistry.TransportProtocolRegistry" />

</beans>
