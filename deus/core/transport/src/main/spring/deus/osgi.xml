<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/osgi  
		http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<!-- services for sending commands, should be used by core package -->
	<osgi:service id="barkerCommandSenderOsgiService" ref="transportBarkerCommandSender" interface="deus.core.transport.commandsender.BarkerCommandSender"/>

	<osgi:service id="publisherCommandSenderOsgiService" ref="transportPublisherCommandSender" interface="deus.core.transport.commandsender.PublisherCommandSender"/>
	
	<osgi:service id="subscriberCommandSenderOsgiService" ref="transportSubscriberCommandSender" interface="deus.core.transport.commandsender.SubscriberCommandSender"/>
	


	<!--  reference for callback, should be provided by core package -->
	<osgi:reference id="publisherCommandReceiver" interface="deus.core.transport.commandreceiver.PublisherCommandReceiver" />
	
	<osgi:reference id="subscriberCommandReceiver" interface="deus.core.transport.commandreceiver.SubscriberCommandReceiver" />


	<!-- service for registration of transport protocols -->
	<osgi:service id="transportProtocolRegistryOsgiService" ref="transportProtocolRegistry" interface="deus.core.transport.protocolregistry.TransportProtocolRegistry" />

</beans>
