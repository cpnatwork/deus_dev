<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="subscriberStubFactory" class="deus.core.subscriber.impl.DelegateSubscriberStubFactory">
		<property name="subfactories">
			<list>
				<ref bean="xmppSubscriberStubFactory"/>
			</list>
		</property>
	</bean>
	
	<bean id="xmppSubscriberStubFactory" class="deus.nsi.xmpp.subscriber.impl.XmppSubscriberStubFactory" />

	
	<bean id="subscriber" class="deus.core.subscriber.impl.SubscriberImpl">
		<constructor-arg ref="subscriberMetadata" />
	</bean>

</beans>
