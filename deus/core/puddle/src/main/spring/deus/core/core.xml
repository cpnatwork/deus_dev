<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="userFactory" class="deus.core.UserFactory" />

	<bean id="gatekeeperTarget" class="deus.core.gatekeeper.impl.GatekeeperImpl" />

	<bean id="loginCredentialChecker" class="deus.core.gatekeeper.impl.LoginCredentialCheckerStub" />	

	<bean id="gatekeeper" class="deus.core.gatekeeper.impl.SetupRemoteConnectionGatekeeperDecorator">
		<constructor-arg ref="gatekeeperTarget" />
	</bean>


	<bean id="remotingInitializerDestroyer" class="deus.remoting.setup.impl.DoNothingRemoteConnectionSetup">
		<qualifier value="gatekeeper"/>
	</bean>

	<bean id="remoteSendingInitializerDestroyer" class="deus.remoting.setup.impl.DoNothingRemoteSendingSetup">
		<qualifier value="gatekeeper"/>
	</bean>
	
</beans>
