<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="transportProtocol" class="deus.core.access.transport.plugins.xmpp.core.protocol.XmppTransportProtocol">
		<property name="loginEventCallback">
			<bean class="deus.core.access.transport.plugins.xmpp.core.protocol.callback.XmppLoginEventCallback" />
		</property>
		<property name="registrationEventCallback">
			<bean class="deus.core.access.transport.core.soul.protocol.callback.DefaultRegistrationEventCallback" />
		</property>
		<property name="messageSender" ref="xmppMessageSender" />
		<property name="transportIdMapper">
			<bean class="deus.core.access.transport.plugins.xmpp.core.mapper.XmppTransportIdMapper" />
		</property>
		<property name="userIdMapper">
			<bean class="deus.core.access.transport.plugins.xmpp.core.mapper.XmppUserIdMapper" />
		</property>
	</bean>

	<bean id="transportProtocolId" class="java.lang.String">
		<constructor-arg value="xmpp" />
	</bean>

	<!-- TODO: externalize settings to properties-file -->
	<bean id="xmppServerConnectionConfiguration" class="deus.core.access.transport.plugins.xmpp.common.XmppServerConnectionConfiguration">
		<property name="localXmppServerAddress" value="faui6p15:9090"/>
		<property name="compression" value="false" />
		<property name="saslAuthentication" value="false" />
		<property name="securityMode" value="disabled" />
	</bean>

	<bean id="xmppConfiguration" class="deus.core.access.transport.plugins.xmpp.common.XmppConfiguration">
		<property name="xmppPropertyFullName" value="fullName" />
		<property name="xmppPropertySenderId" value="sender" />
		<property name="xmppPropertyReceiverId" value="receiver" />
	</bean>


	<bean id="passwordLookup" class="deus.core.access.transport.plugins.xmpp.core.protocol.callback.FixedPasswordLookup">
		<constructor-arg value="test" />
	</bean>


	<bean id="connectionStateRegistry" class="deus.core.access.transport.core.connectionstate.DefaultConnectionStateRegistry" />

</beans>
