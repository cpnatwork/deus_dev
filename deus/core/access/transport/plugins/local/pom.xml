	<artifactId>deus-core-access-transport-plugins-local</artifactId>
	<packaging>bundle</packaging>
	<name>DEUS core access transport plugins local</name>


	<!-- don't remove properties, even if they are empty!!! -->
	<properties>
		<osgi.rootPackage>deus.transport.local</osgi.rootPackage>
		<!--
			org.springframework.orm.jpa.support: this is needed for <context:component-scan />. This BeanPostProcessor requires
			PersistantAnnotationBeanPostProcessor which is in the given package.
		-->
		<osgi.additionalPackageImports>deus.core.transport.core.protocol.callback,org.springframework.orm.jpa.support</osgi.additionalPackageImports>
		
		<osgi.nonExportedPackages>!*.impl</osgi.nonExportedPackages>
	</properties>


