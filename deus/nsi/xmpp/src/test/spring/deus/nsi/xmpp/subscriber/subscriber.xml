<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="subscriberMetadata" class="deus.model.pub.SubscriberMetadata">
		<property name="userId">
			<bean class="deus.model.user.id.XmppUserId">
				<property name="username" value="bob" />
				<property name="server" value="faui6p15" />
			</bean>
		</property>
		<property name="fullName" value="Bob" />
	</bean>


	<bean id="subscriberXmppConversation" factory-bean="xmppNetwork" factory-method="login">
		<constructor-arg ref="subscriberMetadata" />
		<constructor-arg value="test" />
		<qualifier value="subscriber"/>
	</bean>


	<bean id="subscriberStubFactory" class="deus.core.subscriber.impl.DelegateSubscriberStubFactory">
		<property name="subfactories">
			<list>
				<ref bean="xmppSubscriberStubFactory"/>
			</list>
		</property>
	</bean>
	
	<bean id="xmppSubscriberStubFactory" class="deus.nsi.xmpp.subscriber.impl.stub.XmppSubscriberStubFactory"/>

	
	<bean id="subscriber" class="deus.core.subscriber.impl.SubscriberImpl">
		<constructor-arg ref="subscriberMetadata" />
	</bean>

</beans>
