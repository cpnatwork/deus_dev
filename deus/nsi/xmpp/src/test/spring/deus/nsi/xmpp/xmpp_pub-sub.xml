<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<bean id="publisherMetadata" class="deus.model.sub.PublisherMetadata">
		<property name="userId">
			<bean class="deus.model.user.id.XmppUserId">
				<property name="username" value="alice" />
				<property name="server" value="faui6p15" />
			</bean>
		</property>
		<property name="fullName" value="Alice" />
	</bean>

	<bean id="subscriberMetadata" class="deus.model.pub.SubscriberMetadata">
		<property name="userId">
			<bean class="deus.model.user.id.XmppUserId">
				<property name="username" value="bob" />
				<property name="server" value="faui6p15" />
			</bean>
		</property>
		<property name="fullName" value="Bob" />
	</bean>


	<bean id="publisherXmppConversation" factory-bean="xmppNetwork" factory-method="login">
		<constructor-arg ref="publisherMetadata" />
		<constructor-arg value="test" />
		<qualifier value="publisher"/>
	</bean>

	<bean id="subscriberXmppConversation" factory-bean="xmppNetwork" factory-method="login">
		<constructor-arg ref="subscriberMetadata" />
		<constructor-arg value="test" />
		<qualifier value="subscriber"/>
	</bean>


	<bean id="xmppNetwork" class="deus.nsi.xmpp.common.XmppNetwork">
		<property name="xmppServerConnectionConfiguration" ref="xmppServerConnectionConfiguration" />
		<property name="xmppPropertyNameFromFullName" value="${xmpp.property.fullName}" />
	</bean>

	<bean id="xmppServerConnectionConfiguration" class="deus.nsi.xmpp.common.XmppServerConnectionConfiguration">
		<property name="compression" value="false" />
		<property name="saslAuthentication" value="false" />
		<property name="securityMode" value="disabled" />
	</bean>


	<!-- for @Required annotations -->
	<context:annotation-config />

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			<value>xmpp.property.fullName=fullName</value>
		</property>
	</bean>
</beans>
