<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="publisherStub" class="deus.nsi.xmpp.publisher.impl.stub.XmppPublisherStub">
		<constructor-arg ref="publisherMetadata" />
		<constructor-arg ref="subscriberXmppConversation" />
	</bean>

	<bean id="publisherSkeleton" class="deus.nsi.xmpp.publisher.impl.skeleton.XmppPublisherSkeleton">
		<constructor-arg ref="publisherXmppConversation" />
		<property name="packetListeners">
			<list>
				<ref local="subscribePacketListener" />
				<ref local="unsubscribePacketListener" />
			</list>
		</property>
	</bean>

	<bean id="subscribePacketListener" parent="userMetadataParsingFilteredPacketListener" class="deus.nsi.xmpp.publisher.impl.skeleton.SubscribePacketListener">
		<constructor-arg ref="publisher" />
	</bean>

	<bean id="unsubscribePacketListener" parent="userMetadataParsingFilteredPacketListener" class="deus.nsi.xmpp.publisher.impl.skeleton.UnsubscribePacketListener">
		<constructor-arg ref="publisher" />
	</bean>

	<bean id="listOfSubscribers" class="deus.model.pub.impl.ThreadSafeListOfSubscribers" />

	<bean id="publisher" class="deus.core.publisher.impl.PublisherImpl">
		<constructor-arg ref="listOfSubscribers"/>
		<constructor-arg ref="publisherMetadata" />
		<property name="subscriberStubFactory" ref="subscriberStubFactory" />
	</bean>
</beans>
