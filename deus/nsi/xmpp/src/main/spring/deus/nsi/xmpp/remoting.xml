<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean id="initDestroyRemotingGatekeeperDecorator" class="deus.core.gatekeeper.impl.InitDestroyGatekeeperDecorator">
		<constructor-arg ref="gateKeeper"/>
	</bean>
	
	<bean id="initDestroyRemoteListeningGatekeeperDecorator" class="deus.core.gatekeeper.impl.InitDestroyGatekeeperDecorator">
		<constructor-arg ref="initDestroyRemotingGatekeeperDecorator"/>
	</bean>
	
	<bean id="initDestroyRemoteSendingGatekeeperDecorator" class="deus.core.gatekeeper.impl.InitDestroyGatekeeperDecorator">
		<constructor-arg ref="initDestroyRemoteListeningGatekeeperDecorator"/>
	</bean>

</beans>
